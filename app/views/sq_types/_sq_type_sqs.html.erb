<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sqs

    <a data-toggle="collapse" href="#sq_type_sqs_new_form">
      Add sq
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @sq_type.sqs.each do |sq| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to sq, sq %>

        <%= link_to sq, method: :delete, data: { confirm: "Do you really want to delete this sq" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="sq_type_sqs_new_form">
        <%= render partial: "sq_types/sq_type_sqs_new_form" %>
      </div>
    </div>

  </ul>
</div>
