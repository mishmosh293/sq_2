<% was_validated = sq.errors.any? %>

<%= form_with(model: sq, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for sqtype_id start -->
  <div class="form-group">
    <% sqtype_class = "form-control" %>
    <% sqtype_was_invalid = sq.errors.include?(:sqtype) %>

    <% if was_validated %>
      <% if sqtype_was_invalid %>
        <% sqtype_class << " is-invalid" %>
      <% else %>
        <% sqtype_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sqtype_id %>
    <!-- Input for sqtype_id start -->
    <%= f.number_field :sqtype_id, class: sqtype_class, placeholder: "Enter sqtype" %>
    <!-- Input for sqtype_id end -->
    <% if sqtype_was_invalid %>
      <% sq.errors.full_messages_for(:sqtype).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for sqtype_id end -->
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = sq.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% sq.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for pic start -->
  <div class="form-group">
    <% pic_class = "form-control" %>
    <% pic_was_invalid = sq.errors.include?(:pic) %>

    <% if was_validated %>
      <% if pic_was_invalid %>
        <% pic_class << " is-invalid" %>
      <% else %>
        <% pic_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :pic %>
    <!-- Input for pic start -->
    <%= f.text_field :pic, class: pic_class, placeholder: "Enter pic" %>
    <!-- Input for pic end -->
    <% if pic_was_invalid %>
      <% sq.errors.full_messages_for(:pic).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for pic end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = sq.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <!-- Input for description end -->
    <% if description_was_invalid %>
      <% sq.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for description end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
